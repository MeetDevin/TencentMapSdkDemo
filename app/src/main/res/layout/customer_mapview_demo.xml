<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/customer_mapview_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Popup fragment mapview" />

        <Button
        android:id="@+id/customer_mapview_button2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="干活" />
       <EditText android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="我是输入框啊。"/>
    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.tencent.mapsdkdemo.vector.CustomerMapView
            android:id="@+id/customer_mapview_map"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></com.tencent.mapsdkdemo.vector.CustomerMapView>


    </FrameLayout>

</LinearLayout>