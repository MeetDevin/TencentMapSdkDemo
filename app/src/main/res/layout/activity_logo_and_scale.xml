<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tencent.mapsdkdemo.vector.LogoAndScaleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="L:Anchor" />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="L:Margin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="S:Anchor" />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="S:Margin" />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="S:Show" />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="S:State" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:hint="anchor"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:hint="top"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:hint="bottom"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:hint="left"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:hint="right"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.tencent.tencentmap.mapsdk.maps.SupportMapFragment" />
</LinearLayout>
