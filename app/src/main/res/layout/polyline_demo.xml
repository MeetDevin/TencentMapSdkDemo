<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
    <Button
    android:id="@+id/start_alpha_animation"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:onClick="onClick"
    android:text="Start Alpha Animation"/>
    <Button
        android:id="@+id/start_emerge_animation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Start Emerge Animation"/>
    <Button
        android:id="@+id/change_bezier"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Change Bezier"/>
    <Button
        android:id="@+id/navi_route_erase"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Navi Route Erase"/>
  <fragment
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    class="com.tencent.tencentmap.mapsdk.maps.SupportMapFragment"/>
</LinearLayout>
