<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/add_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add bubbles" />

    <Button
        android:id="@+id/remove_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear bubbles" />

    <Button
        android:id="@+id/add_one_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add bubble" />

    <Button
        android:id="@+id/remove_one_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove bubble" />

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.tencent.tencentmap.mapsdk.maps.SupportMapFragment" />

</LinearLayout>